@model DoAn1.ViewModels.ProductViewModel

<!-- breadcrumb -->
<div class="bread-crumb bgwhite flex-w p-l-52 p-r-15 p-l-15-sm">
    <a asp-action="Index" asp-controller="HomePage" class="s-text16">
        Home
        <i class="fa fa-angle-right m-l-8 m-r-9" aria-hidden="true"></i>
    </a>

    <a asp-action="@Model.Product.ProductType.Name" asp-controller="HomePage" class="s-text16">
        @Model.Product.ProductType.Name
        <i class="fa fa-angle-right m-l-8 m-r-9" aria-hidden="true"></i>
    </a>

    <span class="s-text17">
        @Model.Product.ProductName
    </span>
</div>

<!-- Product Detail -->
<div class="container bgwhite p-t-35 p-b-80">
    <div class="flex-w flex-sb">
        <div class="w-size13 p-t-30 respon5">
            <div class="wrap-slick3 flex-sb flex-w">
                <div class="wrap-slick3-dots"></div>
                <div class="wrap-pic-w">
                    <img src="~/images/Products/@Model.Product.Photo" alt="IMG-PRODUCT">
                </div>
                @*<div class="slick3">
                    <div class="item-slick3" data-thumb="/images/Template/thumb-item-01.jpg">
                        <div class="wrap-pic-w">
                            <img src="~/images/Products/@Model.Product.Photo" alt="IMG-PRODUCT">
                        </div>
                    </div>

                    <div class="item-slick3" data-thumb="/images/Template/thumb-item-02.jpg">
                        <div class="wrap-pic-w">
                            <img src="~/images/Products/@Model.Product.Photo" alt="IMG-PRODUCT">
                        </div>
                    </div>

                    <div class="item-slick3" data-thumb="/images/Template/thumb-item-03.jpg">
                        <div class="wrap-pic-w">
                            <img src="~/images/Products/@Model.Product.Photo" alt="IMG-PRODUCT">
                        </div>
                    </div>
                </div>*@
            </div>
        </div>

        <div class="w-size14 p-t-30 respon5">
            <h4 class="product-detail-name m-text16 p-b-13">
                @Model.Product.ProductName
            </h4>

            <span class="m-text17">
                $@Model.Product.Price
            </span>

            <p class="s-text8 p-t-10">
                @Model.Product.ShortDescription
            </p>

            <!--  -->
            <form asp-action="AddToShoppingCart"
                  asp-controller="ShoppingCart"
                  asp-route-productId="@Model.Product.Id"
                  method="post">
                <div class="p-t-33 p-b-60">
                    <div class="flex-m flex-w p-b-10">
                        <div class="s-text15 w-size15 t-center">
                            Size
                        </div>

                        <div class="rs2-select2 rs3-select2 bo4 of-hidden">
                            <select asp-for="Size" asp-items="@Model.Sizes" class="selection-2"></select>
                        </div>
                    </div>
                    <div class="flex-r-m flex-w p-t-10">
                        <div class="w-size16 flex-m flex-w">
                            <div class="btn-addcart-product-detail size9 trans-0-4 m-t-10 m-b-10">
                                <!-- Button -->
                                <button class="flex-c-m sizefull bg1 bo-rad-23 hov1 s-text1 trans-0-4" type="submit">
                                    Add to Cart
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
            <div class="p-b-45">
                <span class="s-text8">Categories: @Model.Product.ProductType.Name</span>
            </div>

            <!--  -->
            <div class="wrap-dropdown-content bo6 p-t-15 p-b-14 active-dropdown-content">
                <h5 class="js-toggle-dropdown-content flex-sb-m cs-pointer m-text19 color0-hov trans-0-4">
                    Description
                    <i class="down-mark fs-12 color1 fa fa-minus dis-none" aria-hidden="true"></i>
                    <i class="up-mark fs-12 color1 fa fa-plus" aria-hidden="true"></i>
                </h5>

                <div class="dropdown-content dis-none p-t-15 p-b-23">
                    <p class="s-text8">
                        @Model.Product.LongDescription
                    </p>
                </div>
            </div>

            <div class="wrap-dropdown-content bo7 p-t-15 p-b-14">
                <h5 class="js-toggle-dropdown-content flex-sb-m cs-pointer m-text19 color0-hov trans-0-4">
                    Additional information
                    <i class="down-mark fs-12 color1 fa fa-minus dis-none" aria-hidden="true"></i>
                    <i class="up-mark fs-12 color1 fa fa-plus" aria-hidden="true"></i>
                </h5>

                <div class="dropdown-content dis-none p-t-15 p-b-23">
                    <p class="s-text8">
                        A product of Group 14
                    </p>
                </div>
            </div>

            <div class="wrap-dropdown-content bo7 p-t-15 p-b-14">
                <h5 class="js-toggle-dropdown-content flex-sb-m cs-pointer m-text19 color0-hov trans-0-4">
                    Reviews (1)
                    <i class="down-mark fs-12 color1 fa fa-minus dis-none" aria-hidden="true"></i>
                    <i class="up-mark fs-12 color1 fa fa-plus" aria-hidden="true"></i>
                </h5>

                <div class="dropdown-content dis-none p-t-15 p-b-23">
                    <p class="s-text8">
                        ???
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>

